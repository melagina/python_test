
#int
number = 5
#float
fnumber = 5.7
#str
name = "masha"
name = 'kisa'
#bool
status = True
status = False
#вывод
print(name,' = ', status  )
#экранирование
print("kisa says \"meow\"")
print('kisa says "meow"')
print("kisa says 'meow'")
print('kisa says \'meow\'')
#перевод строки
print('hello\nworld')
#конкатенация
print('hello ' + name)
print(name + ' is', number, 'year old')
print(name + ' is ' + str(number) + ' year old')
#Ввод значений
name = input("say your name: ")
age = input("say your age: ")
print(name + ' is ' + age + " years old")
#базовые операции
